---
import Layout from '../layouts/Layout.astro';
---
<meta charset="utf-8">

<Layout title="Suma de Matrices">
    <div class="text-center mt-10">
        <h1 class="text-3xl font-bold text-center text-white">Suma de Matrices</h1>
        <p class="text-center text-gray-400">Realiza la suma de dos matrices.</p>
    </div>

    <div id="matrix-inputs" class="mt-8 flex justify-center gap-4">
        <div class="flex flex-col">
            <label for="matrix1" class="text-white">Matriz 1:</label>
            <textarea id="matrix1" rows="5" class="p-2 border border-gray-300 rounded-lg"></textarea>
        </div>
        <div class="flex flex-col">
            <label for="matrix2" class="text-white">Matriz 2:</label>
            <textarea id="matrix2" rows="5" class="p-2 border border-gray-300 rounded-lg"></textarea>
        </div>
    </div>
</Layout>

